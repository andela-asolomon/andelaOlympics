@import 'reset'

html, body
  height 100%

body
  background-color #EEE
  font-family 'Open Sans', sans-serif
  position relative

.uppercase
  text-transform uppercase

.wrapper
  margin 0
  padding 0

.sidenav
  background-color #fff
  position fixed
  left 0
  top 0
  bottom 0
  height 100%
  width 80px

.logo
  padding 10px
  border-bottom 1px solid #dedede
  height 80px
  width 80px

.sidenav .expander,
.sidenav .side-menu li
  padding 20px 0
  text-align center

.expander a,
.side-menu li a
  color #ccc

.expander:hover a,
.side-menu li:hover a
  color #EE6E73

.side-menu
  li
    &.active
      background-color #EE6E73
      a
        color #fff

.top-nav
  background-color #fff
  position fixed
  top 0
  left 80px
  height 80px
  right 0
  width 100%
  .nav-container
    position relative
    width 100%
    height 100%
  .app-name
    background-color #EE6E73
    height 100%
    width auto
    text-align center
    h3
      color #fff
      font-size 24px
      width 100%
  .welcome
    position relative
    float right
    right 80px
    top 0
    height 100%
    .profile-details
      height 80px
      text-align center
      padding 0 10px
      color #000
      &:hover
        background-color #fff
        color #EE6E73
      img
        border-radius 50% 50%
        height 50px
        width 50px
        border 4px solid #EE6E73

      img, span
        line-height 80px
    .btn-login
      height 80px
      padding 0 30px
      background-color #EE6E73
      color #fff
      font-weight 400
      text-align center
      display inline-block
      line-height 80px
      color #EE6E73
      background-color #fff
      font-size 1.0em
      cursor pointer
      &:hover
        background-color #EE6E73
        color #fff

::-webkit-scrollbar
    width 20px

::-webkit-scrollbar-track
    -webkit-box-shadow inset 0 0 6px rgba(238,110,115,0.1)

::-webkit-scrollbar-thumb
    background-color rgba(238,110,115,0.5)

.overlay
  position fixed
  top 80px
  left 80px
  right 0
  bottom 0
  width auto
  height auto
  z-index 10
  background-color rgba(0,0,0,0.65)
  overflow-y scroll
  .content
    padding 6.0em
    height 100%

.cover-wide
  width 100%!important
  height auto!important

video#bgvid
  position fixed
  top 50%
  left 50%
  min-width 100%
  min-height 100%
  width auto
  height auto
  z-index -100
  -webkit-transform translateX(-50%) translateY(-50%)
  transform translateX(-50%) translateY(-50%)
  background-size cover

h1
  color #fff
  font-family "Montserrat", Arial, sans-serif
  font-weight 700
  font-size 4.0em
  margin-bottom 0.6em

p
  font-family "Open Sans", sans-serif
  line-height 1.8em
  font-size 1.3em
  color #DEDEDE
  font-weight 100

/*************************
TEAM VIEW
**************************/
*
  -webkit-box-sizing: border-box;
  -moz-box-sizing: border-box;
  box-sizing: border-box;

/* clear fix */
.grid:after
  content: '';
  display: block;
  clear: both;

/* ---- .grid-item ---- */

.grid-item
  float: left;
  margin: 10px;
  width: 300px;
  height: 500px;
  background: #ffffff;

i.mdi-social-person-add, i.mdi-content-send
  font-size: 1rem;

.card .card-action
  padding: 3px;

.trans
  opacity: 0.8;

.circle
  width: 58px;
  height: 58px;

img
  vertical-align: middle;
  margin-right: 5px;

.team-member
  display: block;
  margin-bottom: 15px;

.clear
  clear: both;

.flip-container
  perspective: 1000;
  transform-style: preserve-3d;

.flip-container:hover
  .back
      transform: rotateY(0deg);
  .front
      transform: rotateY(180deg);

.flip-container, .front, .back
  width: 320px;
  height: 480px;

.flipper
    transition: 0.6s;
    transform-style: preserve-3d;
    position: relative;

.front, .back
  backface-visibility: hidden;
  transition: 0.6s;
  transform-style: preserve-3d;
  position: absolute;
  top: 0;
  left: 0;

.front
  z-index: 2;
  transform: rotateY(0deg);

.back
  transform: rotateY(-180deg);


.vertical.flip-container
  position: relative;

.vertical
  .back
    transform: rotateX(180deg);

.vertical.flip-container:hover
  .back
    transform: rotateX(0deg);

.team-avatar
  width: 50px
  height: 50px

.team-form
  margin-top: 30px;

.create-team
  font-size: 24px;
  color: #333

.modal h1
  margin-top: 30px;

.modal
  max-height: 55%;

/******************
Create Team Modal
******************/
.input-field
  label
      color: #546e7a;
  input[type=text]:focus
      border-bottom: 1px solid #546e7a;
      box-shadow: 0 1px 0 0 #546e7a;
      +
          label
              color: #546e7a;

  input[type=text].valid
      border-bottom: 1px solid #546e7a;
      box-shadow: 0 1px 0 0 #546e7a;

  input[type=text].invalid
      border-bottom: 1px solid red;
      box-shadow: 0 1px 0 0 red;

  .prefix.active
      color: #546e7a;

